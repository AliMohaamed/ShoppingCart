<div style="padding-top: 30px" class="col-md-6 offset-md-3">
    {{#if errorMas}}
        <div class="alert alert-danger">
            {{errorMas}}
        </div>
    {{/if}}
    <div id="payment-errors" class="alert alert-danger d-none">

    </div>
    <form action="/checkout" method="post" id="checkout-form">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="name" value="{{{user.userName}}}" class="form-control" id="">
        </div>
        <br>
        <div class="form-group">
            <label for="Adress">Address</label>
            <input type="text" name="address" value="{{{user.address}}}" class="form-control" id="">
        </div>
        <br>

        <div class="form-group">
            <label for="Adress">Contact</label>
            <input type="text" name="contact" value="{{{user.contact}}}" class="form-control" id="">
        </div>
        <br>

        <div class="form-group">
            <label for="credit card name">Credit Card Name</label>
            <input type="text" name="credit card name" placeholder="Ex. Ali Mohamed" class="form-control" id="">
        </div>
        <br>

        <div class="form-group">
            <label for="credit card number">Credit Card Number</label>
            <input type="number" name="credit card number" placeholder="1234 5678 9012 3421" class="form-control"
                id="card-number">
        </div>
        <br>

        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for=" expiration month">Expiration Month</label>
                    <input type="number" name=" expiration month" placeholder="12" class="form-control"
                        id="card-expiry-month">
                </div>

            </div>
            <br>

            <div class="col-md-6">

                <div class="form-group">
                    <label for=" expiration year">Expiration Year</label>
                    <input type="number" name=" expiration year" placeholder="2024" class="form-control"
                        id="card-expiry-year">
                </div>
            </div>

        </div>
        <br>
        <div class="form-group">
            <label for=" CVC">CVC</label>
            <input type="number" name=" expiration year" placeholder="card CVC" class="form-control" id="card-cvc">
        </div>

        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Checkout $ {{ totalPrice }}</button>
        </div>
    </form>
</div>


<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="/javascripts/checkout.js"></script>